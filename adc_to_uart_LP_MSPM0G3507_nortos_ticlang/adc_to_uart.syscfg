GPIO1.associatedPins[0].$name       = "DC1V2";
GPIO1.associatedPins[0].pin.$assign = "PB27";

GPIO2.$name                          = "GPIOA_ENABLE";
GPIO2.port                           = "PORTA";
GPIO2.associatedPins[0].$name        = "DC_DUMMY_RAIL";
